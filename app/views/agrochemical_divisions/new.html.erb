<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <!-- Encabezado con color verde pastel -->
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #d1e7dd;">
          <h2 class="fw-bold mb-0">Nueva División Agroquímica</h2>
        </div>

        <div class="card-body p-4">
          <%= form_with(model: @agrochemical_division, local: true) do |f| %>

            <% if @agrochemical_division.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center p-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                  <h6 class="fw-bold mb-1">Se encontraron los siguientes errores:</h6>
                  <ul class="mb-0 ps-3">
                    <% @agrochemical_division.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <!-- Campo para ingresar la División -->
            <div class="mb-3">
              <%= f.label :division, "Nombre de la División", class: "form-label fw-bold text-success" %>
              <%= f.text_field :division, class: "form-control shadow-sm border-0", placeholder: "Ejemplo: Herbicidas, Fungicidas, etc." %>
            </div>

            <!-- Botones de acción -->
            <div class="d-grid gap-3">
              <%= f.submit "Crear División", class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #d1e7dd;" %>

              <%= link_to "Cancelar", agrochemical_divisions_path, class: "btn btn-outline-success btn-lg shadow-sm w-100" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
