<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #d1e7fd;">
          <h2 class="fw-bold mb-0">Nuevo Fertilizante</h2>
        </div>

        <div class="card-body p-4">
          <%= form_with model: @fertilizer, local: true do |f| %>
            <% if @fertilizer.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center p-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                  <h6 class="fw-bold mb-1">Se encontraron los siguientes errores:</h6>
                  <ul class="mb-0 ps-3">
                    <% @fertilizer.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :nombre, "Nombre del Fertilizante", class: "form-label fw-bold text-primary" %>
              <%= f.text_field :nombre, class: "form-control shadow-sm border-0", placeholder: "Ingrese el nombre del fertilizante" %>
            </div>

            <div class="mb-3">
              <%= f.label :cantidad, "Cantidad", class: "form-label fw-bold text-primary" %>
              <%= f.number_field :cantidad, class: "form-control shadow-sm border-0", placeholder: "Ingrese la cantidad", step: 1 %>
            </div>

            <div class="d-grid gap-3 mt-4">
              <%= f.submit "Crear Fertilizante", class: "btn btn-lg shadow-sm text-black fw-bold", style="background-color: #d1e7fd;" %>
              <%= link_to "Cancelar", fertilizers_path, class: "btn btn-outline-primary btn-lg shadow-sm w-100", style: "border-color: #6f42c1; color: #6f42c1;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
