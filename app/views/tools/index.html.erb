<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="fw-bold text-warning mb-3 mb-md-0">Herramientas</h1>
    <%= link_to new_tool_path, class: "btn btn-lg shadow-sm d-flex align-items-center btn-sm btn-md text-black fw-bold", style: "background-color: #f8d7da;" do %>
      <i class="bi bi-plus-circle me-2"></i> Nueva Herramienta
    <% end %>
    
  </div>

  <% if @tools.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle table-sm">
        <thead class="table-warning text-center">
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @tools.each do |tool| %>
            <tr>
              <td class="text-center"><%= tool.nombre %></td>
              <td class="text-center"><%= tool.cantidad %></td>
              <td class="text-center d-flex justify-content-center gap-2">
                <%= link_to new_tool_tool_history_path(tool), class: "btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center" do %>
                  <i class="bi bi-pencil-square"></i>
                  <span class="d-none d-md-inline ms-1">Modificar Cantidad</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center p-4 shadow-sm border-0">
      <i class="bi bi-info-circle fs-4"></i>
      <p class="mt-2 mb-0 fw-bold">No hay herramientas registradas.</p>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Historial", tool_histories_path, class: "btn btn-lg shadow-sm text-black fw-bold", style: "background-color: #f8d7da;" %>
  </div>
</div>
