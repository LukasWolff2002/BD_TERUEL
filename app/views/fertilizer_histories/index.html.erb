<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="fw-bold text-primary mb-3 mb-md-0">Historial Global de Fertilizantes</h1>
  </div>

  <% if @fertilizer_histories.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle table-sm">
        <thead class="table-primary text-center">
          <tr>
            <th>ID</th>
            <th>Fertilizante</th>
            <th>Usuario</th>
            <th>Cantidad Modificada</th>
            <th>Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @fertilizer_histories.each do |history| %>
            <tr>
              <td class="text-center"><%= history.id %></td>
              <td class="text-center"><%= history.fertilizer.nombre %></td>
              <td class="text-center"><%= history.usuario %></td>
              <td class="text-center">
                <% if history.cantidad_cambiada.positive? %>
                  <span class="badge bg-success">+<%= history.cantidad_cambiada %></span>
                <% else %>
                  <span class="badge bg-danger"><%= history.cantidad_cambiada %></span>
                <% end %>
              </td>
              <td class="text-center"><%= history.created_at.strftime("%d-%m-%Y %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center p-4 shadow-sm border-0">
      <i class="bi bi-info-circle fs-4"></i>
      <p class="mt-2 mb-0 fw-bold">No hay registros en el historial de fertilizantes.</p>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Volver a Fertilizantes", fertilizers_path, class: "btn btn-lg shadow-sm text-black fw-bold", style: "background-color: #cfe2ff;" %>
  </div>
</div>
