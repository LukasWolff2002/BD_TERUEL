<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="fw-bold text-warning mb-3 mb-md-0">Historial de Herramientas</h1>
  </div>

  <% if @tool_histories.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle table-sm" style="background-color: #fff3cd;">
        <thead class="text-center table-warning encabezado-amarillo">
          <tr>
            <th>Herramienta</th>
            <th>Usuario</th>
            <th>Cantidad Modificada</th>
            <th>Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @tool_histories.each do |history| %>
            <tr>
              <td class="text-center"><%= history.tool.nombre %></td>
              <td class="text-center"><%= history.usuario %></td>
              <td class="text-center fw-bold <%= history.cantidad_cambiada.positive? ? 'text-success' : 'text-danger' %>">
                <%= history.cantidad_cambiada %>
              </td>
              <td class="text-center"><%= history.created_at.strftime("%d-%m-%Y %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center p-4 shadow-sm border-0">
      <i class="bi bi-info-circle fs-4"></i>
      <p class="mt-2 mb-0 fw-bold">No hay registros en el historial.</p>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Volver a Herramientas", tools_path, class: "btn btn-lg shadow-sm text-black fw-bold", style: "background-color: #fff3cd;" %>
  </div>
</div>
