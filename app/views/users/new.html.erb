<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2>Nuevo Usuario</h2>
        </div>
        
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@user.errors.count, "error") %> impidieron guardar este usuario:</h4>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :nombre, "Nombre", class: "form-label" %>
              <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese nombre" %>
            </div>

            <div class="mb-3">
              <%= f.label :apellido, "Apellido", class: "form-label" %>
              <%= f.text_field :apellido, class: "form-control", placeholder: "Ingrese apellido" %>
            </div>

            <div class="mb-3">
              <%= f.label :rut, "RUT", class: "form-label" %>
              <%= f.text_field :rut, class: "form-control", placeholder: "Ej: 12.345.678-9" %>
            </div>

            <div class="mb-3">
              <%= f.label :cargo, "Cargo", class: "form-label" %>
              <%= f.select :cargo, 
                  [
                    'Administrativo',
                    'Jefe de Campo',
                    'Jefe Tecnico',
                    'Jefe Packing',
                    'Riego',
                    'Cosechador',
                    'Volante'
                  ],
                  { prompt: 'Seleccione un cargo' },
                  class: "form-select"
              %>
            </div>

            <div class="mb-3">
              <%= f.label :contrato, "Tipo de Contrato", class: "form-label" %>
              <%= f.select :contrato,
                  [
                    ['Interno', 'interno'],
                    ['Externo', 'externo']
                  ],
                  { prompt: 'Seleccione tipo de contrato' },
                  class: "form-select"
              %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Crear Usuario", class: "btn btn-primary" %>
              <%= link_to "Cancelar", users_path, class: "btn btn-secondary mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 