<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="fw-bold text-primary mb-3 mb-md-0">Usuarios</h1>
    <%= link_to new_user_path, class: 'btn btn-lg shadow-sm d-flex align-items-center btn-sm btn-md text-black fw-bold', style: "background-color: #cfe2ff;" do %>
      <i class="bi bi-person-plus me-2"></i> Nuevo Usuario
    <% end %>
  </div>

  <% if @users.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle table-sm" style="background-color: #cfe2ff;">
        <thead class="table-primary text-center">
          <tr>
            <th>Nombre</th>
            <th class="d-none d-md-table-cell">RUT</th>
            <th>Cargo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="text-center"><%= user.nombre_completo %></td>
              <td class="text-center d-none d-md-table-cell"><%= user.rut %></td>
              <td class="text-center">
                <span class="badge <%= cargo_badge_class(user.cargo) %>">
                  <%= user.cargo %>
                </span>
              </td>
              <td class="text-center d-flex justify-content-center gap-2">
                <%= link_to edit_user_path(user), class: 'btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center' do %>
                  <i class="bi bi-pencil-square me-1"></i> 
                  <span class="d-none d-md-inline">Editar</span>
                <% end %>
                <%= link_to user, class: 'btn btn-sm btn-outline-info d-flex align-items-center justify-content-center' do %>
                  <i class="bi bi-eye me-1"></i>
                  <span class="d-none d-md-inline">Ver</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center p-4 shadow-sm border-0">
      <i class="bi bi-info-circle fs-4"></i>
      <p class="mt-2 mb-0 fw-bold">No hay usuarios registrados.</p>
    </div>
  <% end %>
</div>
