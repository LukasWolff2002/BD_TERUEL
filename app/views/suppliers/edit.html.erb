<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #fde2c2;">
          <h2 class="fw-bold mb-0">Editar Proveedor</h2>
        </div>
        <div class="card-body p-4">
          <%= form_with(model: @supplier, local: true) do |f| %>
            
            <% if @supplier.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center p-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                  <h6 class="fw-bold mb-1"><%= pluralize(@supplier.errors.count, "error") %> impidieron guardar el proveedor:</h6>
                  <ul class="mb-0 ps-3">
                    <% @supplier.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= f.label :nombre, "Nombre", class: "form-label fw-bold" %>
              <%= f.text_field :nombre, class: "form-control shadow-sm border-0", placeholder: "Ingrese el nombre del proveedor" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :rut, "RUT", class: "form-label fw-bold" %>
              <%= f.text_field :rut, class: "form-control shadow-sm border-0", placeholder: "Ingrese el RUT del proveedor" %>
            </div>
            
            <div class="d-grid gap-3">
              <%= f.submit "Actualizar Proveedor", class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #fde2c2;" %>
              <%= link_to "Cancelar", suppliers_path, class: "btn btn-outline-warning btn-lg shadow-sm w-100" %>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
