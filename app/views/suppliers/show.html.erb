<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #fde2c2;">
          <h2 class="fw-bold mb-0">Detalles del Proveedor</h2>
        </div>
        <div class="card-body p-4">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Nombre:</strong> <%= @supplier.nombre %>
            </li>
            <li class="list-group-item">
              <strong>RUT:</strong> <%= @supplier.rut %>
            </li>
          </ul>
          <div class="d-grid gap-3 mt-4">
            <%= link_to "Editar Proveedor", edit_supplier_path(@supplier), class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #fde2c2;" %>
            <%= link_to "Volver", suppliers_path, class: "btn btn-outline-warning btn-lg shadow-sm w-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
