<div class="container mt-4">
  <h1>Proveedores</h1>

  <div class="mb-3">
    <%= link_to 'Nuevo Proveedor', new_supplier_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>RUT</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.nombre %></td>
          <td><%= supplier.rut %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 