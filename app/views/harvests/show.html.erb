<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-danger">Detalle del Registro de Cosecha</h1>
    <%= link_to harvests_path, class: "btn btn-lg shadow-sm d-flex align-items-center btn-sm btn-md text-black fw-bold", style: "background-color: #f8d7da;" do %>
      <i class="bi bi-arrow-left me-2"></i> Volver
    <% end %>
  </div>

  <div class="card border-0 shadow-sm rounded-3">
    <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #f8d7da;">
      <h5 class="fw-bold mb-0">Informaci√≥n de la Cosecha</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <p><strong>Fecha:</strong> <%= @harvest.fecha.strftime("%d/%m/%Y") %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Hora:</strong> <%= @harvest.hora.strftime("%H:%M") %></p>
        </div>

        <div class="col-md-6">
          <p><strong>Sector:</strong> <%= @harvest.sector %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Variedad:</strong> <%= @harvest.variety %></p>
        </div>

        <div class="col-md-6">
          <p><strong>Encargado de Cosecha:</strong> <%= @harvest.user %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Cosechero:</strong> <%= @harvest.cosechero_nombre %></p>
        </div>

        <div class="col-md-6">
          <p><strong>Volante:</strong> <%= @harvest.volante_nombre.presence || "N/A" %></p>
        </div>

        <div class="col-md-6">
          <p><strong>Cajas:</strong> <%= @harvest.cajas %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Kilos por Caja:</strong> <%= number_with_precision(@harvest.kilos_por_caja, precision: 2) %> kg</p>
        </div>
        <div class="col-md-6">
          <p><strong>Kilos Totales:</strong> <%= number_with_precision(@harvest.cajas * @harvest.kilos_por_caja, precision: 2) %> kg</p>
        </div>
        <div class="col-md-6">
          <p><strong>Calidad:</strong> <span class="badge bg-primary fs-6"><%= @harvest.calidad %></span></p>
        </div>
      </div>
    </div>
  </div>
</div>
