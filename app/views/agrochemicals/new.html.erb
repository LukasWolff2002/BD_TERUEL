<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #d1e7dd;">
          <h2 class="fw-bold mb-0">Nuevo Agroquímico</h2>
        </div>

        <div class="card-body p-4">
          <%= form_with(model: @agrochemical, local: true) do |form| %>

            <% if @agrochemical.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center p-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                  <h6 class="fw-bold mb-1"><%= pluralize(@agrochemical.errors.count, "error") %> impiden que se guarde el agroquímico:</h6>
                  <ul class="mb-0 ps-3">
                    <% @agrochemical.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <!-- Campos del formulario -->
            <div class="mb-3">
              <%= form.label :nombre, "Nombre", class: "form-label fw-bold text-success" %>
              <%= form.text_field :nombre, class: "form-control shadow-sm border-0", placeholder: "Ingrese el nombre" %>
            </div>

            <div class="mb-3">
              <%= form.label :cantidad, "Cantidad", class: "form-label fw-bold text-success" %>
              <%= form.number_field :cantidad, class: "form-control shadow-sm border-0", placeholder: "Ingrese la cantidad" %>
            </div>

            <div class="mb-3">
              <%= form.label :ingrediente_activo, "Ingrediente Activo", class: "form-label fw-bold text-success" %>
              <%= form.text_area :ingrediente_activo, class: "form-control shadow-sm border-0", placeholder: "Ingrese el ingrediente activo" %>
            </div>

            <div class="mb-3">
              <%= form.label :objetivo, "Objetivo", class: "form-label fw-bold text-success" %>
              <%= form.text_area :objetivo, class: "form-control shadow-sm border-0", placeholder: "Ingrese el objetivo" %>
            </div>

            <div class="mb-3">
              <%= form.label :agrochemical_division_id, "División", class: "form-label fw-bold text-success" %>
              <%= form.collection_select :agrochemical_division_id, AgrochemicalDivision.all, :id, :division, { prompt: "Selecciona una división" }, class: "form-select shadow-sm border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :ph, "pH", class: "form-label fw-bold text-success" %>
              <%= form.number_field :ph, class: "form-control shadow-sm border-0", placeholder: "Ingrese el pH" %>
            </div>

            <div class="mb-3">
              <%= form.label :incomatibilidad, "Incompatibilidad", class: "form-label fw-bold text-success" %>
              <%= form.text_area :incomatibilidad, class: "form-control shadow-sm border-0", placeholder: "Ingrese la incompatibilidad" %>
            </div>

            <div class="mb-3">
              <%= form.label :carencias, "Carencias", class: "form-label fw-bold text-success" %>
              <%= form.text_area :carencias, class: "form-control shadow-sm border-0", placeholder: "Ingrese las carencias" %>
            </div>

            <div class="mb-3">
              <%= form.label :reingreso, "Reingreso (numero de dias)", class: "form-label fw-bold text-success" %>
              <%= form.number_field :reingreso, class: "form-control shadow-sm border-0", placeholder: "Ingrese el tiempo de reingreso" %>
            </div>

            <div class="mb-3">
              <%= form.label :daño_a_abejorros, "Daño a Abejorros", class: "form-label fw-bold text-success" %>
              <%= form.text_area :daño_a_abejorros, class: "form-control shadow-sm border-0", placeholder: "Ingrese el daño a abejorros" %>
            </div>

            <div class="d-grid gap-3">
              <%= form.submit "Crear Agroquímico", class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #d1e7dd;" %>
              <%= link_to "Volver", agrochemicals_path, class: "btn btn-outline-success btn-lg shadow-sm w-100" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
