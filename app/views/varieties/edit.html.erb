<div class="container mt-4">
  <h1>Editar Variedad</h1>
  
  <%= form_with(model: @variety, local: true) do |f| %>
    <% if @variety.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@variety.errors.count, "error") %> impidieron guardar la variedad:</h2>
        <ul>
          <% @variety.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <!-- Campo para modificar el nombre de la variedad -->
    <div class="mb-3">
      <%= f.label :nombre, "Nombre", class: "form-label" %>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
    
    <!-- SecciÃ³n para agregar o eliminar colores asociados -->
    <div class="mb-3">
      <%= f.label :color_ids, "Colores disponibles", class: "form-label" %>
      <%= f.collection_check_boxes :color_ids, Color.all.order(:nombre), :id, :nombre do |cb| %>
        <div class="form-check">
          <%= cb.check_box(class: "form-check-input") %>
          <%= cb.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>
    
    <div class="actions">
      <%= f.submit "Actualizar Variedad", class: "btn btn-primary" %>
      <%= link_to "Cancelar", varieties_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div> 