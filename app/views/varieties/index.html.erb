<div class="container mt-4">
  <h1>Lista de Variedades</h1>
  
  <%= link_to "Nueva Variedad", new_variety_path, class: "btn btn-primary mb-3" %>
  
  <% if @varieties.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Colores Asociados</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @varieties.each do |variety| %>
            <tr>
              <td><%= variety.id %></td>
              <td><%= variety.nombre %></td>
              <td>
                <% if variety.colors.any? %>
                  <%= variety.colors.map(&:nombre).join(", ") %>
                <% else %>
                  <em>No tiene colores asociados</em>
                <% end %>
              </td>
              <td>
                <%= link_to "Editar", edit_variety_path(variety), class: "btn btn-sm btn-warning" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      No hay variedades registradas.
    </div>
  <% end %>
  
  <%= link_to "Colores", colors_path, class: "btn btn-primary mt-2" %>
</div> 