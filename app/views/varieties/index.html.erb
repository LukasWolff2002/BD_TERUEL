<div class="container mt-4">
  <h1>Variedades de Tomates</h1>
  
  <% if @varieties.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Color</th>
            <th>DescripciÃ³n</th>
          </tr>
        </thead>
        <tbody>
          <% @varieties.each do |variety| %>
            <tr>
              <td><%= variety.nombre %></td>
              <td>
                <span class="badge text-black" style="background-color: <%= variety.color %>;">
