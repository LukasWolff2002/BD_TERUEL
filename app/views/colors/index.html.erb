<div class="container mt-4">
  <h1>Lista de Colores</h1>

  <%= link_to 'Nuevo Color', new_color_path, class: 'btn btn-primary mb-3' %>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @colors.each do |color| %>
          <tr>
            <td><%= color.id %></td>
            <td><%= color.nombre %></td>
            <td>
              <%= link_to "Editar", edit_color_path(color), class: "btn btn-sm btn-warning" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

