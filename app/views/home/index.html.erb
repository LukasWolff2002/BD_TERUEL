<div class="container mt-4">
  <div class="jumbotron">
    <h1 class="display-4">Bienvenido a Teruel</h1>
    <p class="lead">Sistema de gestión agrícola</p>
    <hr class="my-4">
    
    <% if current_user %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Usuario actual</h5>
          <p class="card-text">
            <strong>Nombre:</strong> <%= current_user.nombre %> <%= current_user.apellido %><br>
            <strong>Cargo:</strong> <%= current_user.cargo %><br>
            <strong>Tipo de contrato:</strong> <%= current_user.contrato.capitalize %>
          </p>
        </div>
      </div>

    <% end %>
  </div>
</div> 