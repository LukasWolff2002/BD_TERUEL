<div class="container mt-4">
  <h1>Nuevo Sector</h1>
  
  <%= form_with(model: @sector, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :nombre, "Nombre", class: "form-label" %>
      <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre del sector" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :descripcion, "Descripción", class: "form-label" %>
      <%= f.text_area :descripcion, class: "form-control", rows: 3, placeholder: "Descripción del sector" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :variety_ids, "Variedades (opcional)", class: "form-label" %>
      <%= f.collection_check_boxes(:variety_ids, Variety.order(:nombre), :id, :nombre) do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>
    
    <%= f.submit "Crear Sector", class: "btn btn-primary" %>
  <% end %>
  
  <%= link_to "Volver a Sectores", sectors_path, class: "btn btn-secondary mt-2" %>
</div> 