<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Sectores</h1>
    <%= link_to "Nuevo Sector", new_sector_path, class: "btn btn-primary" %>
  </div>

  <% if @sectors.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Hect√°reas</th>
            <th>Variedades y Colores</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @sectors.each do |sector| %>
            <tr>
              <td><%= sector.id %></td>
              <td><%= sector.nombre %></td>
              <td><%= sector.hectareas %></td>
              <td>
                <% grouped = sector.sector_variety_colors.group_by(&:variety) %>
                <% if grouped.present? %>
                  <% grouped.each do |variety, svc_records| %>
                    <div>
                      <strong><%= variety.nombre %>:</strong>
                      <%= svc_records.map { |svc| svc.color.nombre }.uniq.join(", ") %>
                     
                    </div>
                  <% end %>
                <% else %>
                  <em>No hay variedades asociadas</em>
                <% end %>
              </td>
              <td>
                <%= link_to "Editar Sector", edit_sector_path(sector), class: "btn btn-sm btn-warning" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i> No hay sectores registrados.
    </div>
  <% end %>
</div> 